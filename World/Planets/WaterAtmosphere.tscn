// shader from gdquest (kinda)

uniform float aspect_ratio = .5;
uniform float strength = .05;
uniform float offset = .2;

void fragment() {
	vec2 tiled_uvs = UV;
	tiled_uvs.y *= aspect_ratio;
	tiled_uvs.x *= aspect_ratio;
	tiled_uvs.y = 1.0-tiled_uvs.y;
	tiled_uvs.y += offset;
	tiled_uvs.x += offset;
	
	vec2 waves_uv_offset;
	waves_uv_offset.x = cos(TIME+tiled_uvs.x+tiled_uvs.y);
	waves_uv_offset.y = sin(TIME+tiled_uvs.x+tiled_uvs.y);
	
	COLOR = texture( SCREEN_TEXTURE, tiled_uvs+(waves_uv_offset*(sin(3.14*UV.x)*sin(3.14*UV.y)))*strength );
}"

